---
import { getTranslations, type MaintenanceConditions } from '../../../i18n/utils';
import Layout from '../../../layouts/Layout.astro';
import Container from '../../../components/Container.astro';
import ServiceHero from '../../../components/ServiceHero.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
  ];
}

const { lang } = Astro.params;
const t = getTranslations(lang as 'en' | 'es');
const services = t.services as MaintenanceConditions;
---

<Layout t={t} lang={lang}>
  <Container>
    <div class="py-20 text-text-strong dark:text-text-default-dark">
      <ServiceHero
        title={services.intro.title} 
        description={services.intro.description} 
        imageName="services-maintenance"
        basePath="sanahujadev" 
        fallbackFormat="jpeg" 
        imageSizes="(max-width: 768px) 100vw, 50vw" 
        imageWidth={720}
        imageHeight={405}
        loading="eager"
        fetchpriority="high"
      />
      <div class="mt-12">
        <h2 class="text-2xl font-bold">{services.service.title}</h2>
        <p class="mt-4">{services.service.description}</p>
      </div>

      <div class="mt-12">
        <h2 class="text-2xl font-bold">{services.included.title}</h2>
        <p class="mt-4">{services.included.description}</p>
        <ul class="mt-4 list-disc list-outside pl-5 space-y-2">
          {services.included.items.map(item => (
            <li>
              <strong>{item.title}:</strong> {item.description}
            </li>
          ))}
        </ul>
      </div>

      <div class="mt-12">
        <h2 class="text-2xl font-bold">{services.excluded.title}</h2>
        <p class="mt-4">{services.excluded.description}</p>
        <ul class="mt-4 list-disc list-outside pl-5 space-y-2">
          {services.excluded.items.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </div>

      <div class="mt-12">
        <h2 class="text-2xl font-bold">{services.offer.title}</h2>
        <p class="mt-4">{services.offer.description}</p>
        <h3 class="text-xl font-bold mt-4">{services.offer.conditions.title}</h3>
        <ul class="mt-4 list-disc list-outside pl-5 space-y-2">
          {services.offer.conditions.items.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </div>

      <div class="mt-12">
        <h2 class="text-2xl font-bold">{services.optional.title}</h2>
        <p class="mt-4">{services.optional.description}</p>
        <h3 class="text-xl font-bold mt-4">{services.optional.included.title}</h3>
        <ul class="mt-4 list-disc list-outside pl-5 space-y-2">
          {services.optional.included.items.map(item => (
            <li>
              <strong>{item.title}:</strong> {item.description}
            </li>
          ))}
        </ul>
        <h3 class="text-xl font-bold mt-4">{services.optional.conditions.title}</h3>
        <ul class="mt-4 list-disc list-outside pl-5 space-y-2">
          {services.optional.conditions.items.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </div>

    </div>
  </Container>
</Layout>
