---
import { AstroFont } from 'astro-font';
import "./../global.css"

const { lang } = Astro.props;

const texts = {
    en: {
        title: "Redirecting...",
        h1: "Redirecting...",
        p: "If you are not redirected automatically, ",
    },
    es: {
        title: "Redirigiendo...",
        h1: "Redirigiendo...",
        p: "Si no eres redirigido autom√°ticamente, ",
    }
}

const t = (lang === 'en') ? texts.en : texts.es;
---

<!DOCTYPE html>
<html lang={lang ?? 'es'}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{t.title}</title>

        <AstroFont
            config={[
                {
                    src: [],
                    name: "Urbanist",
                    preload: true,
                    display: "swap",
                    selector: "html",
                    fallback: "sans-serif",
                    googleFontsURL: 'https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap',
                },
            ]}
        />
        <slot name="meta" />
    </head>
    <body class="bg-bg-canvas dark:bg-bg-canvas-dark">
        <main class="flex items-center justify-center min-h-screen">
            <div class="text-center">
                <div class="w-16 h-16 border-4 border-dashed rounded-full animate-spin border-primary dark:border-primary-dark mx-auto"></div>
                <h1 class="mt-8 text-4xl font-bold text-text-strong dark:text-text-default-dark">{t.h1}</h1>
                <p class="mt-4 text-text-muted dark:text-text-muted-dark">
                    {t.p}<slot name="link" />
                </p>
            </div>
        </main>
    </body>
</html>
