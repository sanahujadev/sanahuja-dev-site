---
import { AstroFont } from 'astro-font';
import GoogleTagManager from './GoogleTagManager.astro';
import { ClientRouter } from "astro:transitions";
import AppFooter from "../components/AppFooter.astro";
import AppHeader from "../components/AppHeader.astro";
import "./../global.css";
import type { CookieConsentType } from '../i18n/utils';

const { t, lang } = Astro.props;
const common = t.common;
const cookieTranslations = t.cookieConsent as CookieConsentType;
const GTM_ID = import.meta.env.PUBLIC_GTM_ID;

if (!GTM_ID) {
    console.warn("[Gambito] ADVERTENCIA: PUBLIC_GTM_ID no está definido.");
}

const consentConfig = {
  lang: lang,
  translations: cookieTranslations
};
---

<!DOCTYPE html>
<html lang={common.lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="description" content={common.meta.description} />
        <title>{common.meta.title}</title>

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url.href} />
        <meta property="og:title" content={common.meta.title} />
        <meta property="og:description" content={common.meta.description} />
        <meta property="og:image" content={new URL("/og-image.jpeg", Astro.site).href} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url.href} />
        <meta property="twitter:title" content={common.meta.title} />
        <meta property="twitter:description" content={common.meta.description} />
        <meta property="twitter:image" content={new URL("/og-image.jpeg", Astro.site).href} />

        <link rel="canonical" href={Astro.url.href} />

        <slot name="json-ld" />
        <slot name="head" />

        <AstroFont
            config={[{
                src: [],
                name: "Urbanist",
                preload: true,
                display: "swap",
                selector: "html",
                fallback: "sans-serif",
                googleFontsURL: 'https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap',
            }]}
        />
        <ClientRouter />
        <GoogleTagManager />
    </head>
    
    <body class="bg-bg-canvas dark:bg-bg-canvas-dark">
        {GTM_ID && (
            <noscript>
                <iframe 
                    src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
                    height="0" 
                    width="0" 
                    style="display:none;visibility:hidden">
                </iframe>
            </noscript>
        )}
        
        <AppHeader t={common} lang={lang} />
        <slot />
        <AppFooter t={t.footer} />
        
        <script is:inline src="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@3.1.0/dist/cookieconsent.umd.js" defer></script>
        <!-- ✅ Pasar config a window (inline script sin imports) -->
        <script is:inline define:vars={{ consentConfig }}>
            window.__CONSENT_CONFIG__ = consentConfig;
            </script>
        
        <!-- ✅ Script externo que se bundlea correctamente -->
        <script src="../scripts/init-consent.ts"></script>

        <script>
            function setupCookieConsentDarkMode() {
                const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');

                function updateTheme(e: { matches: boolean }) {
                    if (e.matches) {
                        document.documentElement.classList.add('cc--darkmode');
                    } else {
                        document.documentElement.classList.remove('cc--darkmode');
                    }
                }

                // Initial check
                updateTheme(mediaQuery);

                // Listen for changes
                mediaQuery.addEventListener('change', updateTheme);
            }

            setupCookieConsentDarkMode();
            document.addEventListener('astro:page-load', setupCookieConsentDarkMode);
        </script>
    </body>
</html>
