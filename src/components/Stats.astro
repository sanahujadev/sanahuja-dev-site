---
import Container from "./Container.astro";
import es from "./../i18n/solutionES.json"; 
import en from "./../i18n/solutionEN.json";

const { currentLocale } = Astro;
const t = currentLocale === "es" ? es : en;
const pointsIcons = [
  { 
    bgColor: 'bg-bg-secondary-accent-soft dark:bg-bg-secondary-accent-soft-dark',
    iconColor: 'text-text-secondary-accent dark:text-text-secondary-accent-dark',
    path: 'M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z' 
  },
  { 
    bgColor: 'bg-bg-accent-soft dark:bg-bg-accent-soft-dark',
    iconColor: 'text-text-accent-strong dark:text-text-accent-strong-dark',
    path: 'M4.848 2.771A49.144 49.144 0 0112 2.25c2.43 0 4.817.178 7.152.52 1.978.292 3.348 2.024 3.348 3.97v6.02c0 1.946-1.37 3.678-3.348 3.97a48.901 48.901 0 01-3.476.383.39.39 0 00-.297.17l-2.755 4.133a.75.75 0 01-1.248 0l-2.755-4.133a.39.39 0 00-.297-.17 48.9 48.9 0 01-3.476-.384c-1.978-.29-3.348-2.024-3.348-3.97V6.741c0-1.946 1.37-3.68 3.348-3.97zM6.75 8.25a.75.75 0 01.75-.75h9a.75.75 0 010 1.5h-9a.75.75 0 01-.75-.75zm.75 2.25a.75.75 0 000 1.5H12a.75.75 0 000-1.5H7.5z' 
  },
  { 
    bgColor: 'bg-indigo-100 dark:bg-indigo-900/40',
    iconColor: 'text-indigo-600 dark:text-indigo-400',
    path: 'M15 19.128a9.38 9.38 0 00-12 0M15 6a3 3 0 11-6 0 3 3 0 016 0zM21 19.128a9.38 9.38 0 00-12 0'

  }
];
---
<div id="solution">
    <Container>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-icon-accent">
            <path fill-rule="evenodd" d="M2.25 13.5a8.25 8.25 0 018.25-8.25.75.75 0 01.75.75v6.75H18a.75.75 0 01.75.75 8.25 8.25 0 01-16.5 0z" clip-rule="evenodd" />
            <path fill-rule="evenodd" d="M12.75 3a.75.75 0 01.75-.75 8.25 8.25 0 018.25 8.25.75.75 0 01-.75.75h-7.5a.75.75 0 01-.75-.75V3z" clip-rule="evenodd" />
        </svg>
      
        <div class="space-y-6 justify-between md:flex flex-row-reverse md:gap-6 md:space-y-0 lg:gap-12 lg:items-center">
            <div class="md:w-5/12 lg:w-1/2">
                <img
                    src="./images/icons/logo.png"
                    alt={t.solution.image_alt}
                    loading="lazy"
                    class="w-full"
                />
            </div>
            <div class="md:w-7/12 lg:w-1/2">
                <h2 class="text-3xl font-bold text-text-default md:text-4xl dark:text-text-default-dark">
                    {t.solution.headline}
                </h2>
                <div class="my-8 space-y-4 text-text-muted dark:text-text-muted-dark">
                    {t.solution.description.map((paragraph) => (
                        <p>{paragraph}</p>
                    ))}
                </div>

                <div class="divide-y space-y-4 divide-border-default dark:divide-border-darker">
                    {t.solution.points.map((point, index) => (
                        <div class={`flex gap-4 md:items-center ${index > 0 ? 'pt-4' : 'mt-8'}`}>
                            <div class={`w-12 h-12 flex-shrink-0 flex gap-4 rounded-full ${pointsIcons[index].bgColor}`}>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class={`w-6 h-6 m-auto ${pointsIcons[index].iconColor}`}>
                                    <path fill-rule="evenodd" d={pointsIcons[index].path} clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="w-5/6">
                                <h3 class="font-semibold text-lg text-text-strong dark:text-text-default-dark">{point.title}</h3>
                                <p class="text-text-subtle dark:text-text-subtle-dark">{point.description}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </Container>
</div>
