---
import Container from "../Container.astro";

const { hero } = Astro.props;
---

<div id="about-hero">
  <Container>
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="text-center md:text-left">
        <h1 class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary-gradient-stop dark:from-primary-dark dark:to-secondary-gradient-stop-dark">{hero.title}</h1>
      </div>
      <div>
        <img src={hero.imageUrl} alt="SanahujaDev" class="rounded-3xl shadow-lg w-full" />
      </div>
    </div>
  </Container>
</div>
