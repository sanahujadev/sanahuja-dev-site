---
import type { Features } from "../i18n/utils";
import Container from "./Container.astro"

const { t } = Astro.props as { t: Features };

const imgPath = [
  "/images/icons/icon-responsive.svg",
  "/images/icons/icon-secured.svg",
  "/images/icons/icon-seo.svg",
  "/images/icons/icon-message.svg",
];

---

<div id="features">
  <Container>
    <div class="md:w-2/3 lg:w-1/2">
      {/* Visually hidden title for accessibility, as planned */}
      <h2 class="sr-only">{t.section_title}</h2> 

      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-secondary">
        <path fill-rule="evenodd" d="M9 4.5a.75.75 0 01.721.544l.813 2.846a3.75 3.75 0 002.576 2.576l2.846.813a.75.75 0 010 1.442l-2.846.813a3.75 3.75 0 00-2.576 2.576l-.813 2.846a.75.75 0 01-1.442 0l-.813-2.846a3.75 3.75 0 00-2.576-2.576l-2.846-.813a.75.75 0 010-1.442l2.846-.813A3.75 3.75 0 007.466 7.89l.813-2.846A.75.75 0 019 4.5zM18 1.5a.75.75 0 01.728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 010 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 01-1.456 0l-.258-1.036a2.625 2.625 0 00-1.91-1.91l-1.036-.258a.75.75 0 010-1.456l1.036-.258a2.625 2.625 0 001.91-1.91l.258-1.036A.75.75 0 0118 1.5zM16.5 15a.75.75 0 01.712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 010 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 01-1.422 0l-.395-1.183a1.5 1.5 0 00-.948-.948l-1.183-.395a.75.75 0 010-1.422l1.183-.395c.447-.15.799.5.948.948l.395-1.183A.75.75 0 0116.5 15z" clip-rule="evenodd" />
      </svg>
      
      <h3 class="my-8 text-2xl font-bold text-text-strong dark:text-text-default-dark md:text-4xl">
        {t.headline}
      </h3>
      <p class="text-text-muted dark:text-text-muted-dark">
        {t.description}
      </p>
    </div>

    {/* The Magic Happens Here: Dynamic Card Grid */}
    <div class="mt-16 grid divide-x divide-y divide-border-default dark:divide-border-default-dark overflow-hidden rounded-3xl border border-border-default text-text-muted dark:border-border-default-dark sm:grid-cols-2 lg:grid-cols-4 lg:divide-y-0 xl:grid-cols-4">
        {t.cards.map((card, index) => (
            <div class={`group relative bg-bg-surface dark:bg-bg-surface-dark transition hover:z-[1] hover:shadow-2xl hover:shadow-shadow-default ${index === 3 ? 'bg-bg-surface-soft dark:bg-bg-emphasis' : ''}`}>
                <div class={`relative space-y-8 py-12 p-8 transition duration-300 ${index === 3 ? 'group-hover:bg-bg-surface dark:group-hover:bg-bg-surface-dark' : ''}`}>
                    <img
                        src={imgPath[index]}
                        class="w-12"
                        width="512"
                        height="512"
                        alt={card.image_alt}
                    />
                    <div class="space-y-2">
                        <h4 class="text-xl font-semibold text-text-strong dark:text-text-default-dark transition group-hover:text-secondary">
                            {card.title}
                        </h4>
                        <p class="text-text-muted dark:text-text-muted-dark">
                            {card.description}
                        </p>
                    </div>
                    <a href={`${card.url}`} data-astro-reload class="flex items-center justify-between group-hover:text-secondary">
                        <span class="text-sm font-semibold text-text-strong dark:text-text-default-dark">{card.cta_text}</span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 -translate-x-4 text-2xl opacity-0 transition duration-300 group-hover:translate-x-0 group-hover:opacity-100">
                            <path fill-rule="evenodd" d="M12.97 3.97a.75.75 0 011.06 0l7.5 7.5a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 11-1.06-1.06l6.22-6.22H3a.75.75 0 010-1.5h16.19l-6.22-6.22a.75.75 0 010-1.06z" clip-rule="evenodd" />
                        </svg>
                    </a>
                </div>
            </div>
        ))}
    </div>
  </Container>
</div>
