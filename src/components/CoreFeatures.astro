---
import type { CoreFeatures } from "../i18n/utils";
import Container from "./Container.astro";

const { features, lang } = Astro.props as { features: CoreFeatures, lang: string };
---
<Container>
<div class="mt-16" id="core-features">
    <h2 class="text-center text-3xl font-bold text-text-strong dark:text-text-default-dark md:text-4xl">{features.title}</h2>
    <div class="mt-12 grid gap-8 md:grid-cols-2">
        {features.features.map(feature => (
            <div class="p-4 border border-border-default dark:border-border-default-dark rounded-lg bg-bg-surface dark:bg-bg-surface-dark lg:p-8">
                <div class="flex items-start gap-4">
                    <img src={feature.icon} alt={feature.title} class="w-12 h-12 flex-shrink-0" />
                    <div>
                        <h3 class="text-xl font-bold text-text-strong dark:text-text-default-dark">{feature.title}</h3>
                        <p class="mt-2 text-text-muted dark:text-text-muted-dark">{feature.description}</p>
                        {feature.points && (
                            <ul class="mt-4 space-y-2">
                                {feature.points.map(point => (
                                    <li class="flex items-start gap-2 text-text-muted dark:text-text-muted-dark">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 flex-shrink-0 text-primary dark:text-primary-dark mt-0.5">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                                        </svg>
                                        <span set:html={point} />
                                    </li>
                                ))}
                            </ul>
                        )}
                        {feature.cta && (
                            <a href={`/${lang}${feature.cta.url}`} class="mt-4 inline-block text-primary dark:text-primary-dark font-semibold hover:underline">
                                {feature.cta.text}
                                &rarr;
                            </a>
                        )}
                    </div>
                </div>
            </div>
        ))}
    </div>
</div>
</Container>